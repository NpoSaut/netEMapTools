<Window x:Class="EMapNavigator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:m="clr-namespace:MapVisualization;assembly=MapVisualization"
        SnapsToDevicePixels="True" TextOptions.TextFormattingMode="Display" Background="{StaticResource {x:Static SystemColors.ControlBrushKey}}"
        Title="MainWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <m:MapView Name="Map" Grid.Row="0" Margin="2" Click="Map_OnClick" />
        <Border Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10" Background="#70ffffff" Padding="3,1">
            <TextBlock>
                <Run Text="{Binding ElementName=Map, Path=CentralPoint, Mode=OneWay}" />
            </TextBlock>
        </Border>
        <ToolBar Grid.Row="1">
            <Button Content="Load Map" Click="Button_Click" />
            <Button Content="Ride!" Click="RideButton_OnClick" />
        </ToolBar>
    </Grid>
</Window>